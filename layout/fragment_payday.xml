<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.payday.PaydayFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/addLabel"
            android:text="Lista pogrzebów do rozliczenia:"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:text="Pogrzebów razem:  szt."
            android:textAlignment="center"
            android:id="@+id/sectionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addLabel"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:background="#12244e"
            android:textColor="#ffffff"/>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sectionName"
            android:layout_marginTop="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Lp."
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="Miejscowość"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Data"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kwota"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="8dp" />

            </TableRow>

        </TableLayout>


        <TextView
            android:id="@+id/toPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tableLayout"
            android:layout_marginTop="10dp"
            android:background="#12244e"
            android:padding="10dp"
            android:text="Do wypłacenia: 1 075,00 PLN"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="19sp" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toPayment"
            android:height="55dp"
            android:layout_alignRight="@id/toPayment"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-50dp"
            android:layout_marginRight="-100dp"
            android:text="Wypłać" />

    </RelativeLayout>
</ScrollView>