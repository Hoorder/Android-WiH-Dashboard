<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.payday.PaydayFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/addLabel"
            android:text="Szukaj według:"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:text="Miejscowości"
            android:textAlignment="center"
            android:id="@+id/sectionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addLabel"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:background="#12244e"
            android:textColor="#ffffff"/>

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="182dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="50dp"
            android:layout_height="wrap_content"
            android:hint="Np: Lubenia"
            android:layout_below="@id/sectionName" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sectionName"
            android:layout_alignEnd="@id/searchInput"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="-103dp"
            android:height="50dp"
            android:text="Szukaj" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchInput"
            android:layout_marginTop="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Miejscowość"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Data"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:padding="8dp" />

            </TableRow>
        </TableLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>